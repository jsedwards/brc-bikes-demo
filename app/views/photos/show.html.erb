<div id="photo">
  <h2><%= @photo.title %></h2>
  <%= link_to "Edit Photo", [:edit, @post, @photo] %>
  <%= link_to "Delete Photo", [@post, @photo], method: :delete, data: {confirm: "Are you sure you want to delete this photo?"} %>
  <%= simple_format(@photo.description) %>
  <%= image_tag(@photo.image_url, width: 300, height: 300) %>
</div>
